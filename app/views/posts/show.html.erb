<div class="card container">
<br/>

  <p id="notice"><%= notice %></p>
  <h2>Contents</h2>
  <div class="card container">
  <p>
    <b>Name:</b>
    <%= @post.name %>
  </p>
  
  <p>
    <b>Title:</b>
    <%= @post.title %>
  </p>
  
  <p>
    <b>Content:</b>
    <%= @post.content %>
  </p>

  <form action="/likes/action" method="post"> 
    <input type="hidden" name="likeable_id" value="<%= @post.id %>"/>
    <div class="container">
    <button class="btn btn-success">
    <span style="display: inline-block; width: 30px; height: 30px">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
      <path d="M7.493 18.75c-.425 0-.82-.236-.975-.632A7.48 7.48 0 016 15.375c0-1.75.599-3.358 1.602-4.634.151-.192.373-.309.6-.397.473-.183.89-.514 1.212-.924a9.042 9.042 0 012.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 00.322-1.672V3a.75.75 0 01.75-.75 2.25 2.25 0 012.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 01-2.649 7.521c-.388.482-.987.729-1.605.729H14.23c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 00-1.423-.23h-.777zM2.331 10.977a11.969 11.969 0 00-.831 4.398 12 12 0 00.52 3.507c.26.85 1.084 1.368 1.973 1.368H4.9c.445 0 .72-.498.523-.898a8.963 8.963 0 01-.924-3.977c0-1.708.476-3.305 1.302-4.666.245-.403-.028-.959-.5-.959H4.25c-.832 0-1.612.453-1.918 1.227z" />
    </svg>
    </span>
    </button>
  
    <%= @post.likes.length() %>
    </div>
  </form>
</div>

  <br/>
  <h2>Comments</h2>

  <div class="card container">
  <% @post.comments.each do |comment| %>
    <p>
      <b>Commenter:</b>
      <%= comment.commenter %>
    </p>
   
    <p>
      <b>Comment:</b>
      <%= comment.body %>
    </p>
  <% end %>

  <h2>Add a comment:</h2>
  <%= form_for([@post, @post.comments.build]) do |f| %>
    <div class="field form-group">
      <%= f.label :commenter %><br />
      <%= f.text_field :commenter ,class:"form-control"%>
    </div>
    <div class="field form-group">
      <%= f.label :body %><br />
      <%= f.text_area :body ,class:"form-control"%>
    </div>
    <br/>
    <div class="actions">
      <%= f.submit class:"btn btn-success"%>
    </div>
  <% end %>
  </div>

  <br />
  <div class="actions">
  <%= link_to 'Edit Post', edit_post_path(@post), class:"btn btn-warning" %> 
  <%= link_to "Back to posts", posts_path ,class:"btn btn-secondary" %>
  </div>
</div>

 